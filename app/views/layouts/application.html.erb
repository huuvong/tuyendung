    </div>
    <!-- ./page header -->

    <!-- page content -->
    <div class="page-content">
      <%= yield %>
    </div>
    <!-- ./page content -->

    <!-- page footer -->
    <div class="page-footer">

      <!-- page footer wrap -->
      <div class="page-footer-wrap bg-dark-gray">
        <!-- page footer holder -->
        <div class="page-footer-holder page-footer-holder-main">

          <div class="row">

            <!-- about -->
