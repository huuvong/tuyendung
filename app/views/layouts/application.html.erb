        </div>
        <!-- ./page logo -->

        <!-- nav mobile bars -->
        <div class="navigation-toggle">
          <div class="navigation-toggle-button"><span class="fa fa-bars"></span></div>
        </div>
        <!-- ./nav mobile bars -->

        <!-- navigation -->
        <ul class="navigation">
          <li>
            <a href="/">Trang chủ</a>
