              </div>

            </div>
            <!-- ./recent tweets -->

            <!-- contacts -->
            <div class="col-md-3">
              <h3>Contacts</h3>

              <div class="footer-contacts">
                <div class="fc-row">
                  <span class="fa fa-home"></span>
                  000 StreetName, Suite 111,<br/>
